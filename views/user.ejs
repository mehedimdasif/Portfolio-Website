                        <% include ./partials/messages %>
                        
                        <form action="/delete" method="POST" class="col-lg-2">
                            <a href="/users/logout" class="btn btn-secondary"
                            style="float: left;margin-top: 190px;
                            margin-left: -114px;"><i class="fas fa-sign-out-alt"></i> Log Out</a>
